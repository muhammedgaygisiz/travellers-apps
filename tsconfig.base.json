{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@travellers-apps/prices/footer-tool-bar/feature": [
        "libs/prices/footer-tool-bar/feature/src/index.ts"
      ],
      "@travellers-apps/prices/home/feature": [
        "libs/prices/home/feature/src/index.ts"
      ],
      "@travellers-apps/prices/shell/feature": [
        "libs/prices/shell/feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
